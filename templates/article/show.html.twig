{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<section class="uk-section uk-section-secondary">
    <div class="uk-container">
        <h1>Article</h1>
        <article class="uk-article">
            <img data-src="{{ asset(article.imagePath) }}" alt="{{article.captionImage}}" uk-img>
            <h1 class="uk-article-title">
                <a class="uk-link-reset" href="">{{ article.title }}</a>
            </h1>

            <p class="uk-article-meta">
                écrit par <em>{{ article.author.username|upper }}</em>
            </p>
            <p class="uk-article-meta">
                Le {{ article.createdAt|date('d/m/Y à H:i')}}
            </p>
            <p class="uk-text-lead">{{ article.content|raw}}</p>
        </article>

        <div class="uk-margin"> <a class="uk-button uk-button-text" href="{{ path('article_index') }}">back to list</a>
            {% if is_granted('ROLE_USER') %}
            <a class="uk-margin-left" href="{{ path('article_edit', {'id': article.id}) }}">
                <span uk-icon="icon: file-edit"></span>
            </a>
            {{ include('article/_delete_form.html.twig') }}
            {% endif %}
        </div>





    </div>
</section>





{% endblock %}