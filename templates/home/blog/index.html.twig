{% extends 'base-alternative.html.twig' %}

{% block title %}Blog_liste{% endblock %}

{% block body %}
<section class="uk-section">
    <div class="uk-container">
        <h1>Le blog</h1>
        <div class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-height-match="target: > div > .uk-card; row: false"  uk-grid>
            {% for article in articles %}
            <div>
                <div class="uk-card uk-card-default uk-card-hover">
                    <div class="uk-width-auto">
                        <img data-src="/uploads/articles_images/{{ article.image }}" alt="{{article.captionImage}}" uk-img>
                    </div>
                    <div class="uk-card-header">
                        <div class="uk-grid-small uk-flex-middle" uk-grid>
                            <div class="uk-width-expand">
                                <h3 class="uk-card-title uk-margin-remove-bottom">{{article.title}}</h3>
                                <p class="uk-article-meta uk-margin-remove"><span uk-icon="icon: calendar"></span>
                                    {{ article.createdAt|date('d/m/Y Ã  H:i')}}</p>
                                <ul class="uk-breadcrumb uk-margin-remove">
                                    <li class="uk-disabled">
                                        <p class="uk-article-meta uk-margin-remove"><span uk-icon="icon: pencil"></span>
                                            {{ article.author.username|upper }}</p>
                                    </li>
                                    <li class="uk-disabled">
                                        <p class="uk-article-meta uk-margin-remove"><span
                                                uk-icon="icon: comment"></span>
                                            {{article.comments|length}}</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="uk-card-body">
                        <p>{{article.content|slice(0,150)|raw}}...</p>
                    </div>
                    <div class="uk-card-footer">
                        <a href="{{ path('blog_show',{'id': article.id})}}" class="uk-button uk-button-text"><span
                                uk-icon="icon: plus-circle"></span> Lire
                            plus</a>
                    </div>
                </div>
            </div>
            {% else %}
            No records Found
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}