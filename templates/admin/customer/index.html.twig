{% extends 'admin_base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
<h1>Customer index</h1>

<table class="uk-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Company</th>
            <th>Subject</th>
            <th>Address</th>
            <th>PostalCode</th>
            <th>City</th>
            <th>Country</th>
            <th>Content</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for customer in customers %}
        <tr>
            <td>{{ customer.id }}</td>
            <td>{{ customer.firstName }}</td>
            <td>{{ customer.lastName }}</td>
            <td>{{ customer.email }}</td>
            <td>{{ customer.company }}</td>
            <td>{{ customer.subject }}</td>
            <td>{{ customer.address }}</td>
            <td>{{ customer.postalCode }}</td>
            <td>{{ customer.city }}</td>
            <td>{{ customer.country }}</td>
            <td>{{ customer.content }}</td>
            <td>
                <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="12">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('customer_new') }}">Create new</a>
{% endblock %}