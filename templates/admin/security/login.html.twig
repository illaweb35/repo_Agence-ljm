{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="uk-section-secondary">
    <div class="uk-align-center uk-text-center">
        <div class="uk-align-center" style="width: 350px">
            <p><span uk-icon="icon: user; ratio: 6"></span></p>
            <h1>Please sign in</h1>
            <form method="post" class="uk-form-stacked">
                {% if error %}
                <div class="uk-alert uk-alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="uk-margin">
                    <label for="inputUsername" class="sr-only">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                        class="form-control" placeholder="Username" required autofocus> </div>
                <div class="uk-margin">
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                        placeholder="Password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="uk-margin ">
                    <label>
                        <input class="uk-chekbox" type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                <div class="uk-margin">

                    <button class="uk-button uk-button-primary uk-border-rounded" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
        </div>
</section>
{% endblock %}