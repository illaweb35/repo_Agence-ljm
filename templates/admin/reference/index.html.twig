{% extends "admin_base.html.twig" %}

{% block title %}Liste des References{% endblock %}

{% block body %}
    <section class="uk-section">
        <div class="uk-container">
            <h1>Liste des références</h1>

            <div class="uk-margin">
                <a class="uk-button uk-button-primary uk-border-rounded" href="{{ path('reference_new') }}">Créer une nouvelle
                    référence</a>
            </div>
            <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l" uk-height-match="target: > div > .uk-card; row: false" uk-grid>
                {% for reference in references %}
                    <div>
                        <div class="uk-card uk-card-default uk-card-hover">
                            <div class="uk-width-auto">
                                <img data-src="/uploads/references_images/{{ reference.image }}" alt="{{reference.captionImage}}" uk-img>
                            </div>
                            <div class="uk-card-header">
                                <div class="uk-grid-small uk-flex-middle" uk-grid>

                                    <div class="uk-width-expand">
                                        <h3 class="uk-card-title uk-margin-remove-bottom">{{reference.name}}</h3>
                                        <p class="uk-text-meta uk-margin-remove-top">{{reference.createdAt|date('d/m/Y à H:i')}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="uk-card-body">
                                <p>{{reference.mission|slice(0,150)|raw}}
                                </p>
                            </div>
                            <div class="uk-card-footer">
                                <a href="{{ path('reference_show',{'id': reference.id})}}" class=""><span
                                            uk-icon="icon: plus-circle"></span> Lire
                                    plus</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}