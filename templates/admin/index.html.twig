{% extends 'admin_base.html.twig' %}

{% block title %}DashBoard{% endblock %}

{% block body %}
<section class="uk-section uk-section-default section-solo">
    <h1 class="uk-margin-left">DashBoard</h1>
    <div class="uk-grid-collapse uk-child-width-expand@s" uk-grid>
        <div>
            <div class="uk-padding">
                <h3>Utilisateurs</h3>
                <table class="uk-table uk-table-hover uk-table-divider">
                    <thead>
                        <tr>
                            <th>Pseudo</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{user.username}}</td>
                            <td>
                                <a href="{{ path('user_edit', {'id': user.id}) }}"><span
                                        uk-icon="icon: file-edit"></span></a>
                                <a href="#delete-user-confirm" uk-toggle><span uk-icon="icon: trash"></span></a>
                                <div id="delete-user-confirm" uk-modal>
                                    <div class="uk-modal-dialog uk-modal-body">
                                        <p class="uk-text-center">Voulez vous vraiment supprimer cet utilisateur ?</p>
                                        <div class="uk-text-center">
                                            <form method="post" action="{{ path('user_delete', {'id': user.id}) }}">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token"
                                                    value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button class="uk-button uk-button-danger">Supprimer</button>
                                            </form>
                                            <button class="uk-margin uk-button uk-button-default uk-modal-close"
                                                type="button">Annuler</button>
                                        </div>
                                    </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <div class="uk-padding">
                <h3>Article</h3>
                <table class="uk-table uk-table-hover uk-table-divider">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Image</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                        <tr>
                            <td>{{article.id}}</td>
                            <td><a href="{{ path('blog_show',{'id': article.id})}}">{{article.title}}</a></td>
                            <td>{{article.author.username}}</td>
                            <td>
                                <a href="{{ path('blog_show',{'id': article.id})}}">
                                    <img id="img-table-dashboard"
                                        data-src="/uploads/articles_images/{{ article.image }}"
                                        alt="{{ article.captionImage }}" uk-img>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('article_edit',{'id': article.id})}}"><span
                                        uk-icon="icon: file-edit"></span></a>
                                <a href="#delete-post-confirm" uk-toggle><span uk-icon="icon: trash"></span></a>
                                <div id="delete-post-confirm" uk-modal>
                                    <div class="uk-modal-dialog uk-modal-body">
                                        <p class="uk-text-center">Voulez vous vraiment supprimer cet article ?</p>
                                        <div class="uk-text-center">
                                            <form method="post"
                                                action="{{ path('article_delete', {'id': article.id}) }}">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token"
                                                    value="{{ csrf_token('delete' ~ article.id) }}">
                                                <button
                                                    class="uk-button uk-button-danger uk-border-rounded">Supprimer</button>
                                            </form>
                                            <button class="uk-margin uk-button uk-button-default uk-modal-close"
                                                type="button">Annuler</button>
                                        </div>
                                    </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <div class="uk-padding">
                <h3>Commentaires</h3>
                <table class="uk-table uk-table-hover uk-table-divider">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Auteur</th>
                            <th>Contenu</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for comment in comments %}
                        <tr>
                            <td>{{comment.id}}</td>
                            <td>{{comment.author}}</td>
                            <td>{{comment.content}}</td>
                            <td></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
{% endblock %}