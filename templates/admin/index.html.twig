{% extends 'admin_base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<section class="uk-section">

    <h1 class="uk-margin-left">DashBoard</h1>
    <div class="uk-grid-collapse uk-child-width-expand@s" uk-grid>
        <div>
            <div class="uk-background-muted uk-padding">
                <h3>Utilisateurs</h3>
                <table class="uk-table uk-table-hover uk-table-divider">
                    <thead>
                        <tr>
                            <th>Pseudo</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{user.username}}</td>
                            <td>
                                <a href="{{ path('user_edit', {'id': user.id}) }}"><span
                                        uk-icon="icon: file-edit"></span></a>
                                {{ include('admin/user/_delete_form.html.twig') }}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <div class="uk-background-primary uk-padding uk-light">
                <h3>Article</h3>
                <table class="uk-table uk-table-hover uk-table-divider">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Image</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                        <tr>
                            <td>{{article.id}}</td>
                            <td>{{article.title}}</td>
                            <td>{{article.author.username}}</td>
                            <td><img data-src="{{uploaded_asset(article.imagePath)}}" width="150" height="150" alt=""
                                    uk-img></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <div class="uk-background-secondary uk-padding uk-light">
                <h3>Commentaires</h3>
                <table class="uk-table uk-table-hover uk-table-divider">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Auteur</th>
                            <th>Contenu</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for comment in comments %}
                        <tr>
                            <td>{{comment.id}}</td>
                            <td>{{comment.author}}</td>
                            <td>{{comment.content}}</td>
                            <td></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</section>
{% endblock %}